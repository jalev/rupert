<pool type='dir'>
  <name><%= name %></name>
  <capacity unit='G'><%= size %></capacity>
  <allocation unit='G'><%= alloc_size %></allocation>
  <source>
  </source>
  <target>
    <path><%= path %></path>
    <permissions>
      <mode>0700</mode>
      <owner>-1</owner>
      <group>-1</group>
    </permissions>
  </target>
</pool>
