<domain type='<%= domain_type %>'>
  <name><%= name %></name>
  <%- if uuid -%>
    <uuid><%= uuid %></uuid>
  <% end -%>
  <memory unit="M"><%= ram %></memory>
  <vcpu><%= cpu %></vcpu>
  <os>
    <type arch='<%= arch %>'><%= os_type%></type>
    <% if cmdargs || kickstart || remote -%>
      <kernel><% if !kernel.nil? -%><%= kernel %><% end -%></kernel>
      <initrd><% if !initrd.nil? -%><%= initrd %><% end -%></initrd>
      <cmdline><%= cmdargs %><%-if remote%>method=<%= remote %><%- end %><%- if kickstart %> ks=http://<%= kickstart_file %><%- end %></cmdline>
    <% end -%>
    <% if iso -%>
      <boot dev='cdrom'/>
    <% end -%>
    <boot dev='hd'/>
  </os>
  <features>
    <acpi/>
    <apic/>
    <pae/>
  </features>
  <clock offset='utc'/>
  <on_poweroff>destroy</on_poweroff>
  <on_reboot>destroy</on_reboot>
  <on_crash>destroy</on_crash>
  <devices>
  <%- if iso -%>
    <disk type='file' device='cdrom'>
      <driver name='qemu' type='raw'/>
      <source file='<%= iso %>'/>
      <target dev='hdc' bus='ide' />
      <readonly/>
      <address type='drive' controller='0' bus='1' unit='0'/>
    </disk>
  <%- end -%>
  <%- if !disk.new? -%>
    <disk type='file' device='disk'>
      <driver name='qemu' type='<%= disk.format %>' cache='none'/>
      <source file='<%= disk.path %>'/>
      <target dev='vda' bus='virtio'/>
    </disk>
  <% end %>
    <controller type='usb' index='0'>
      <alias name='usb0'/>
      <address type='pci' domain='0x0000' bus='0x00' slot='0x01' function='0x2'/>
    </controller>
    <interface type='bridge'>
      <source bridge='br0'/>
      <model type='virtio'/>
    </interface>
    <serial type='pty'>
      <target port='0'/>
    </serial>
    <console type='pty'>
      <target type='serial' port='0'/>
    </console>
    <input type='tablet' bus='usb'>
      <alias name='input0'/>
    </input>
    <input type='mouse' bus='ps2'/>
    <graphics type='<%= display_type %>' port='<%= display_port %>' autoport='yes'/>
    <sound model='ich6'>
      <alias name='sound0'/>
      <address type='pci' domain='0x0000' bus='0x00' slot='0x04' function='0x0'/>
    </sound>

    <video>
      <model type='cirrus' vram='9216' heads='1'/>
    </video>
  </devices>
</domain>
