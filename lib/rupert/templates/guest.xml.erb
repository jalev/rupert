<domain type='<%= domain_type %>'>
  <name><%= name %></name>
  <%- if uuid -%>
    <uuid><%= uuid %></uuid>
  <% end -%>
  <memory unit="MB"><%= ram %></memory>
  <vcpu><%= cpu %></vcpu>
  <os>
    <type arch='<%= arch %>'><%= os_type%></type>
    <% if cmdargs -%>
      <cmdline><%= cmdargs %></cmdline>
    <% end -%>
    <% if iso -%>
      <boot dev='cdrom'/>
    <% end -%>
    <boot dev='hd'/>
  </os>
  <features>
    <acpi/>
    <apic/>
    <pae/>
  </features>
  <clock offset='utc'/>
  <on_poweroff>destroy</on_poweroff>
  <on_reboot>restart</on_reboot>
  <on_crash>restart</on_crash>
  <devices>
  <%- if iso -%>
    <disk type='file' device='cdrom'>
      <driver name='qemu' type='raw'/>
      <source file='<%= iso %>'/>
      <target dev='hdc' bus='ide' />
      <readonly/>
      <address type='drive' controller='0' bus='1' unit='0'/>
    </disk>
  <%- end -%>
  <%- if !volume.new? -%>
    <disk type='file' device='disk'>
      <driver name='qemu' type='<%= volume.format %>' cache='none'/>
      <source file='<%= volume.path %>'/>
      <target dev='vda' bus='virtio'/>
    </disk>
  <% end %>
    <interface type='bridge'>
      <source bridge='br0'/>
      <model type='virtio'/>
    </interface>
    <serial type='pty'>
      <target port='0'/>
    </serial>
    <console type='pty'>
      <target type='serial' port='0'/>
    </console>
    <input type='mouse' bus='ps2'/>
    <graphics type='<%= display_type %>' port='<%= display_port %>' autoport='yes'/>
    <video>
      <model type='cirrus' vram='9216' heads='1'/>
    </video>
  </devices>
</domain>
